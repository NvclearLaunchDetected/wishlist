{
	//"update_url":"",
	"name": "wishlist",
	"version": "0.1",
	"manifest_version": 2,
	"description": "wishlist",
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"default_icon": "img/shopping-cart-full.ico",
		"default_title": "wishlist"
	},
	"content_scripts": [
	    //content script for google oauth2
	    {
	      "matches": ["http://www.google.com/robots.txt*"],
	      "js": ["oauth2/oauth2_inject.js"],
	      "run_at": "document_start"
	    },
	    {
	    	"matches": [
	    		"*://*.auction.co.kr/*",
	    		"*://*.gmarket.co.kr/*"
	    	],
	    	"js": [
	    		"libs/jquery.1.8.1.min.js",
	    		"scripts/injectpopup.js"
	    	],
	    	"css": [
	    		"css/popup.css"
	    		//,"css/bootstrap.min.css"
	    	]
	    }
	],
	"permissions": [
		"tabs",
		"background",
		"https://accounts.google.com/o/oauth2/token",
    	"https://www.googleapis.com/",
    	"*://*.auction.co.kr/*"
    	,"*://*.gmarket.co.kr/*"
	]

	//,"default_locale" : "en"
}
