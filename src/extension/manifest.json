{
	//"update_url":"",
	"name": "wishlist",
	"version": "0.2",
	"manifest_version": 2,
	"description": "wishlist",
	"options_page": "options.html",
	"background": {
		"scripts": [
			"libs/jquery.1.8.1.min.js"
			,"oauth2/oauth2.js"
			,"scripts/urlparser.js"
			,"scripts/auth.js"
			,"scripts/lifetime.js"
			,"scripts/eventhandler.js"
		],
		"persistent": false
	},
	"browser_action": {
		//"default_icon": "img/shopping-cart-full.ico",
		"default_icon": "img/myfav_i19.png",
		"default_title": "wishlist",
		"default_popup": "wvpopup.html"
	},
	"content_scripts": [
	    //content script for google oauth2
	    {
	      "matches": ["http://www.google.com/robots.txt*"],
	      "js": ["oauth2/oauth2_inject.js"],
	      "run_at": "document_start"
	    },
	    {
	    	"matches": ["http://www.google.co.kr/*"],
	    	"js": ["scripts/auth_inject.js"],
	    	"run_at": "document_start"
	    },
	    {
	    	"matches": [
	    		"*://*.auction.co.kr/*"
	    		,"*://*.gmarket.co.kr/*"
	    		,"*://*.interpark.com/*"
		    	,"*://*.11st.co.kr/*"
		    	,"*://*.cjmall.com/*"
		    	,"*://*.lotte.com/*"
		    	,"*://*.lotteimall.com/*"
	    	],
	    	"js": [
	    		"libs/jquery.1.8.1.min.js"
	    		,"scripts/urlparser.js"
	    		,"scripts/markets.js"
	    		,"scripts/pagescraper.js"
	    		,"scripts/addToWishlist.js"
	    	]
	    }
	],
	"permissions": [
		"tabs"
		,"storage"
		,"background"
		,"storage"
		,"https://accounts.google.com/o/oauth2/token"
    	,"https://www.googleapis.com/"
    	,"*://wishapi-auth.cloudfoundry.com/*"
    	,"*://*.auction.co.kr/*"
		,"*://*.gmarket.co.kr/*"
		,"*://*.interpark.com/*"
    	,"*://*.11st.co.kr/*"
    	,"*://*.cjmall.com/*"
    	,"*://*.lotte.com/*"
    	,"*://*.lotteimall.com/*"
	]	

	//,"default_locale" : "en"
}
